{
  "name": "postcss-px-scale",
  "version": "1.0.0",
  "description": "css px scale",
  "main": "src/index.js",
  "files": [
    "src"
  ],
  "scripts": {
    "task:lint": "eslint --fix ./src/*.js",
    "task:mocha": "mocha",
    "task:report": "mocha --reporter mochawesome",
    "test": "npm run task:lint && npm run task:mocha",
    "precommit": "lint-staged"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "{src}/*.{js}": [
      "eslint --fix",
      "prettier --write",
      "mocha",
      "git add"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "semi": false,
    "trailingComma": "all",
    "endOfLine": "lf"
  },
  "keywords": [
    "px",
    "scale",
    "flexible",
    "px@2x"
  ],
  "author": "qgr@winbaoxian.com",
  "license": "MIT",
  "dependencies": {
    "postcss": "^7.0.16"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^4.3.0",
    "eslint-plugin-import": "^2.17.3",
    "husky": "^2.3.0",
    "lint-staged": "^8.1.7",
    "mocha": "^6.1.4",
    "mochawesome": "^3.1.2"
  },
  "engines": {
    "node": ">= 6.0.0",
    "npm": ">= 6.0.0"
  }
}
